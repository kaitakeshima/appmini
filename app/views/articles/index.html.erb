<div class="contents row" >
    <% @article.each do |article| %>
      <div class="content_post" style="background-image: url(<%=  image_tag 'neko.png' %>);">
        <% if user_signed_in? && current_user.id == article.user_id %>
        <div class="more">
          <%# <span><%= image_tag 'arrow_top.png'</span>  %>ここ！
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/articles/#{article.id}/edit", method: :get %>
            </li
            <li>
              <%= link_to '削除', "/articles/#{article.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        
        
        <%= simple_format(article.text) %>
        <span class="name">
        <a herf="">
        <span>投稿者</span><%= article.user.nickname %>
        </a>
        </span>
      </div>
    <% end %>
  
  </div>